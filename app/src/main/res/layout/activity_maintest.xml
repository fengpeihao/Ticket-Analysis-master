<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="52dp"
              android:layout_gravity="bottom"
              android:background="@android:color/transparent"
              android:orientation="vertical">


    <LinearLayout
        android:id="@+id/content_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:background="#FFFFFFFF"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/line_bottom1"
            android:layout_width="0px"
            android:layout_height="52dp"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"/>

            <TextView
                android:id="@+id/tv1s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="2dp"
                android:text="首页"
                android:textColor="@color/bottom_menu_text_color"
                android:textSize="@dimen/bottom_menu_text_size_small"/>

            <ImageView
                android:id="@+id/iv_bottom1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@id/tv1s"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_2dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/menu1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/line_bottom2"
            android:layout_width="0px"
            android:layout_height="52dp"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"/>

            <TextView
                android:id="@+id/tv2s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="2dp"
                android:text="开奖"

                android:textColor="@color/bottom_menu_text_color"
                android:textSize="@dimen/bottom_menu_text_size_small"/>

            <ImageView
                android:id="@+id/iv_bottom2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@id/tv2s"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_2dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/menu5"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/line_bottom3"
            android:layout_width="0px"
            android:layout_height="52dp"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background"/>

            <TextView
                android:id="@+id/tv3s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="2dp"
                android:text="境外彩讯"
                android:textColor="@color/bottom_menu_text_color"
                android:textSize="@dimen/bottom_menu_text_size_small"/>

            <ImageView
                android:id="@+id/iv_bottom3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@id/tv3s"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dimen_2dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/menu4"/>
        </RelativeLayout>

